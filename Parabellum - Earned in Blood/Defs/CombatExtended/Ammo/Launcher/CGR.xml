	</ThingCategoryDef>

	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_CGR</defName>
		<label>84mmCG(Carl Gustav Arsenal)</label>
		<ammoTypes>
			<Ammo_84mmCGShell_HEAT>Bullet_84mmCGShell_HEAT</Ammo_84mmCGShell_HEAT>
