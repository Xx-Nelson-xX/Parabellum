	<!-- ================== Craft Crate(50mm PaK38/L60 ATG) ================== -->

	<RecipeDef ParentName="cratecraftbase">
		<defName>Buildheavycannon_Crate</defName>
		<label>Build heavy cannon crate</label>
		<description>Use this to build a high caliber cannon, either for tanks or stationary turrets.</description>
		<jobString>Building a heavy cannon crate.</jobString>
		<workAmount>16000</workAmount>
		<skillRequirements>
			<Crafting>14</Crafting>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Weapon_Parts</li>
					</thingDefs>
				</filter>
				<count>24</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Glass</li>
					</thingDefs>
				</filter>
				<count>6</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Cannon_Component</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
				<categories>
				<li>Metallic</li>
                  </categories>
				</filter>
				<count>95</count>
			</li>
		</ingredients>
		<products>
			<Pa_heavycannon_Crate>1</Pa_heavycannon_Crate>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Glass</li>
				<li>Weapon_Parts</li>
				<li>Cannon_Component</li>
			</thingDefs>
			<categories>
				<li>SLDBar</li>
				<li>USLDBar</li>
             </categories>
		</fixedIngredientFilter>
		<researchPrerequisite>Artillery_C2</researchPrerequisite>
	</RecipeDef>

