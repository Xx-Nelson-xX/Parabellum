	<!-- ================== Craft Crate(50mm PaK38/L60 ATG) ================== -->

	<RecipeDef ParentName="cratecraftbase">
		<defName>BuildPaK38_Crate</defName>
		<label>Build Pak 38 ATG crate</label>
		<description>Use this to build a Pak 38/L60, an Ancient Anti-Tank gun, it use 50mm cannon shells for ammo.</description>
		<jobString>Building a Pak 38 ATG crate.</jobString>
		<workAmount>10000</workAmount>
		<skillRequirements>
			<Crafting>8</Crafting>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Weapon_Parts</li>
					</thingDefs>
				</filter>
				<count>8</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Heavy_Component</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
				<categories>
				<li>Metallic</li>
                  </categories>
				</filter>
				<count>40</count>
			</li>
		</ingredients>
		<products>
			<Pa_PaK38_Crate>1</Pa_PaK38_Crate>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Weapon_Parts</li>
				<li>Heavy_Component</li>
			</thingDefs>
			<categories>
				<li>SLDBar</li>
				<li>USLDBar</li>
             </categories>
		</fixedIngredientFilter>
		<researchPrerequisite>Mortars</researchPrerequisite>
	</RecipeDef>
	
