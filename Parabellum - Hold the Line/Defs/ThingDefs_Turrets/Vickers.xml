<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<!-- ================== XM-307 Advanced Crew Served Weapon ================== -->

	<ThingDef ParentName="BaseGun_Turret">
		<defName>Pa_Vickers</defName>
		<label>Vickers .303 MMG</label>
		<graphicData>
			<texPath>Things/Building/Security/CMLT/Vickers_Top</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<description>A Vickers Medium Machinegun attached to a tripod.</description>
		<techLevel>Industrial</techLevel>
		<statBases>
			<MarketValue>120</MarketValue>
			<SightsEfficiency>1.35</SightsEfficiency>
			<ShotSpread>0.08</ShotSpread>
			<SwayFactor>1.2</SwayFactor>
			<RangedWeapon_Cooldown>1.2</RangedWeapon_Cooldown>
		</statBases>
		<generateCommonality>0</generateCommonality>
		<verbs>
			<li Class="CombatExtended.VerbPropertiesCE">
				<recoilPattern>Mounted</recoilPattern>
				<recoilAmount>0.65</recoilAmount>
				<verbClass>CombatExtended.Verb_ShootCE</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_303British_FMJ</defaultProjectile>
				<warmupTime>0.82</warmupTime>
				<range>52</range>
				<ticksBetweenBurstShots>8</ticksBetweenBurstShots>
				<burstShotCount>25</burstShotCount>
				<soundCast>Shot_Lewis</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>10</muzzleFlashScale>
			</li>
		</verbs>
		<comps>
			<li Class="CombatExtended.CompProperties_AmmoUser">
				<magazineSize>250</magazineSize>
				<reloadTime>5.8</reloadTime>
				<!-- <spawnUnloaded>true</spawnUnloaded> -->
				<ammoSet>AmmoSet_303British</ammoSet>
			</li>
			<li Class="CombatExtended.CompProperties_FireModes">
				<aimedBurstShotCount>5</aimedBurstShotCount>
			</li>
		</comps>
	</ThingDef>
	
	<!--=============== Turret Base ===============-->

	<ThingDef ParentName="TurretMannedBase">
		<defName>Turret_Vickers</defName>
		<label>Vickers .303 MMG</label>
		<graphicData>
			<texPath>Things/Building/Security/Base/Vickers_Base</texPath>
			<drawSize>(1.5,1.5)</drawSize>
			<shadowData>
				<volume>(0.3, 0.6, 0.3)</volume>
			</shadowData>
		</graphicData>
		<uiIconPath>Things/Building/Security/CMLT/Vickers_icon</uiIconPath>
		<statBases>
			<MaxHitPoints>120</MaxHitPoints>
			<WorkToBuild>850</WorkToBuild>
			<Mass>15</Mass>
			<Bulk>33.5</Bulk>
		</statBases>
		<description>Vickers Medium machinegun mounted on a tripod.</description>
		<size>(1,1)</size>
		<stuffCategories>
			<li>RuggedMetallic</li>
		</stuffCategories>
		<costStuffCount>50</costStuffCount>
		<costList>
			<Pa_Vickers_Crate>1</Pa_Vickers_Crate>
		</costList>
		<designationCategory>Security</designationCategory>
		<building>
			<turretGunDef>Pa_Vickers</turretGunDef>
			<turretTopDrawSize>1.5</turretTopDrawSize>
			<buildingTags>
				<li>MachineGun</li>
			</buildingTags>
		</building>
		<minifiedDef>MinifiedTurret_Vickers</minifiedDef>
		<thingCategories>
			<li>BuildingsSecurity</li>
		</thingCategories>
		<researchPrerequisites>
			<li>Turrets_31</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>4</constructionSkillPrerequisite>
	</ThingDef>
	
	<!--=============== Crate Base ===============-->

	<ThingDef ParentName="CrateBase">
		<defName>Pa_Vickers_Crate</defName>
		<label>Vickers .303 MMG crate</label>
		<description>Use this to build Vickers .303 MMG turret.</description>
		<graphicData>
			<texPath>Things/Item/Resource/WeaponCrate</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Standard_Drop</soundInteract>
		<soundDrop>Standard_Drop</soundDrop>
		<tickerType>Normal</tickerType>
		<stackLimit>1</stackLimit>
		<techLevel>Industrial</techLevel>
		<statBases>
			<MarketValue>1800</MarketValue>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1</Flammability>
			<DeteriorationRate>0</DeteriorationRate>
			<Mass>13.5</Mass>
			<Bulk>18</Bulk>
		</statBases>
		<thingCategories>
			<li>WeaponCrate</li>
		</thingCategories>
		<tradeTags>
			<li>SimpleCrate</li>
		</tradeTags>
	</ThingDef>

	<!-- ================== Craft Crate ================== -->

	<RecipeDef ParentName="cratecraftbase">
		<defName>BuildVickers_Crate</defName>
		<label>Build Vickers .303 MMG crate</label>
		<description>Use this to build a Vickers .303 MMG, a type of stationary manned turret. It uses .303 British for ammo.</description>
		<jobString>Build Vickers.303 MMG crate.</jobString>
		<workAmount>8000</workAmount>
		<skillRequirements>
			<Crafting>5</Crafting>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Weapon_Parts</li>
					</thingDefs>
				</filter>
				<count>8</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Heavy_Component</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
				<categories>
				<li>Metallic</li>
                  </categories>
				</filter>
				<count>28</count>
			</li>
		</ingredients>
		<products>
			<Pa_Vickers_Crate>1</Pa_Vickers_Crate>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Weapon_Parts</li>
				<li>Heavy_Component</li>
			</thingDefs>
			<categories>
				<li>SLDBar</li>
				<li>USLDBar</li>
             </categories>
		</fixedIngredientFilter>
		<workSkill>Crafting</workSkill>
		<researchPrerequisite>Turrets_31</researchPrerequisite>
	</RecipeDef>

	<!-- ================== Minified ================== -->
	
	<ThingDef ParentName="MinifiedTurretBase">
		<defName>MinifiedTurret_Vickers</defName>
		<label>Vickers .303 MMG turret</label>
		<statBases>
			<Mass>13.5</Mass>
			<Bulk>18</Bulk>
		</statBases>
	</ThingDef>
	
</Defs>
