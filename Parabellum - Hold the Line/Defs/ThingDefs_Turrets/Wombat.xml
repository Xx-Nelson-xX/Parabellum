	<!-- ================== Minified ================== -->
	
	<ThingDef ParentName="MinifiedTurretBase">
		<defName>MinifiedTurret_Wombat</defName>
		<label>120mm Wombat turret</label>
		<statBases>
			<Mass>180</Mass>
			<Bulk>160</Bulk>
		</statBases>
	</ThingDef>
	
</Defs>
