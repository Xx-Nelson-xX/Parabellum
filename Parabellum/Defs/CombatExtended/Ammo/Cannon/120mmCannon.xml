				<li>
					<def>Bomb_Secondary</def>
					<amount>240</amount>
				</li>
			</secondaryDamage>
		</projectile>
		<comps>
			<li Class="CombatExtended.CompProperties_ExplosiveCE">
				<damageAmountBase>200</damageAmountBase>
				<explosiveDamageType>Bomb</explosiveDamageType>
				<explosiveRadius>2.8</explosiveRadius>
