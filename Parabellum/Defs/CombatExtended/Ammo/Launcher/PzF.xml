			<thingDefs>
				<li>FSX</li>
				<li>Powder</li>
				<li>ComponentIndustrial</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Ammo_PzF_Frag>1</Ammo_PzF_Frag>
