		<cookOffFlashScale>25</cookOffFlashScale>
		<cookOffTailSound>ShellCookOff_Ambient</cookOffTailSound>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="SchiessbecherBase">
