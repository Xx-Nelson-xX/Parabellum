<Defs>
	
	<!-- M1928A1 Thompson -->
	<RecipeDef ParentName="RangedWeaponRecipeBase">
		<defName>BuildM1928A1</defName>
		<label>Build the Thompson M1928A1 SMG</label>
		<description>The Thompson M1928A1 is a fullsize submachineg gun, cops and mobs favorites.\nCaliber: .45 ACP</description>
		<jobString>Building a Thompson M1928A1.</jobString>
		<workAmount>16000</workAmount>
		<skillRequirements>
			<Crafting>5</Crafting>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>SMG_Component</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Weapon_Parts</li>
					</thingDefs>
				</filter>
				<count>12</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentIndustrial</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>Metallic</li>
					</categories>
				</filter>
				<count>50</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>Woody</li>
					</categories>
				</filter>
				<count>32</count>
			</li>
		</ingredients>
		<products>
			<Pa_Tommy>1</Pa_Tommy>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>SMG_Component</li>
				<li>Weapon_Parts</li>
				<li>ComponentIndustrial</li>
			</thingDefs>
			<categories>
				<li>SLDBar</li>
				<li>USLDBar</li>
				<li>HCMBar</li>
				<li>Woody</li>
			</categories>
		</fixedIngredientFilter>
		<recipeUsers>
			<li>WeaponCraftingWorkTable</li>
		</recipeUsers>
		<researchPrerequisite>BlowbackOperation</researchPrerequisite>
	</RecipeDef>
	
