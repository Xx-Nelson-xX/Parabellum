	<!-- ================== Craft Crate ================== -->

	<RecipeDef ParentName="cratecraftbase">
		<defName>BuilSPG9M_Crate</defName>
		<label>Build SPG-9M RATG crate</label>
		<description>Use this to build a SPG-9M RATG, a type of stationary manned turret. It uses SPG-9 grenades for ammo.</description>
		<jobString>Build SPG-9M RATG crate.</jobString>
		<workAmount>12800</workAmount>
		<skillRequirements>
			<Crafting>10</Crafting>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Weapon_Parts</li>
					</thingDefs>
				</filter>
				<count>6</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Launcher_Component</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
				<categories>
				<li>Metallic</li>
                  </categories>
				</filter>
				<count>20</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Rubber</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<products>
			<Pa_SPG9M_Crate>1</Pa_SPG9M_Crate>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Weapon_Parts</li>
				<li>Launcher_Component</li>
				<li>Rubber</li>
			</thingDefs>
			<categories>
			<li>SLDBar</li>
			<li>USLDBar</li>
             </categories>
		</fixedIngredientFilter>
		<researchPrerequisite>Rockets_C1</researchPrerequisite>
	</RecipeDef>

